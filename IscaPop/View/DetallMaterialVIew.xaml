<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Base="clr-namespace:IscaPop.Base"
             x:Class="IscaPop.View.DetallMaterialVIew"
             Title="DetallMaterialVIew">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Text="Nom: " Grid.Row="0"  Grid.Column="0"></Label>
            <Entry Text="{Binding Client.nom}" Grid.Row="0" Grid.Column="1"></Entry>
            <Label Text="Estat: " Grid.Row="1"  Grid.Column="0"></Label>
            <Entry Text="{Binding Client.estat}" Grid.Row="1" Grid.Column="1"></Entry>
        </Grid>
        <Grid>
            <Button Text="Solicitar Material" Clicked="btnSolicitar" HorizontalOptions="CenterAndExpand"></Button>
        </Grid>
    </VerticalStackLayout>
</Base:BasePage>